
<section class="devise-section">
  <div class="signin">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 col-sm-12">
        <div class="sign-form">
          <h1>Sign Up</h1>
          <input type="email" class="sign-app-input sign_up_email" placeholder="&#xf0e0; Email Address">
          <input type="password" class="sign-app-input sign_up_password" placeholder="&#xf023; Password">
          <input type="password" class="sign-app-input sign_up_conform_password" placeholder="&#xf023; Confirm Password">
          <p class="sign-up-bottom-link">By signing up, you agree to Moober's <span>Terms & Condition </span> and <span>Privacy Policy</span></p>
          <a class="website-signup-btn">Sign Up</a>
          <p class="option-link">OR</p>
          <button class="web-facebook-btn" id="fb_sign_in"><span><i class="fa fa-facebook-official"></i></span> <%= link_to "Sign Up with Facebook", "javascript:;" %></button>
          <p class="signin-link">Already have an account? Sign In</p>
        </div>
      </div>
  </div>
</section>

<section class="devise-footer">
  <%= render 'shared/devise_footer' %>
</section>