<%= render 'shared/static_header' %>
<div class="ac-settings">
  <div class="mt-10">
    <div class="contact-mt-10">
      <div class="col-md-6 col-md-offset-3">
        <div class="edit-profile text-center">
          <h1>Edit Profile</h1>
          <form>
            <input type="text" name="fullname" placeholder="Full Name" class="edit-name">
            <input type="text" name="phone_number" placeholder="Phone Number" class="edit-number">
            <input type="email" name="email" placeholder="Email" class="edit-email">
            <a href='javascript:;' class="edit-profile-btn">Submit</a>
          </form>
        </div>
      </div>
    </div>
    <div class="contact-mt-10">
      <div class="col-md-6 col-md-offset-3">
        <div class="edit-profile text-center">
          <h1>Reset Password</h1>
          <form>
            <input type="password" name="current_password" placeholder="Current Password" class="edit-current-pswd">
            <input type="password" name="new_password" placeholder="New Password" class="edit-new-pswd">
            <input type="password" name="confirm_password" placeholder="Confirm Password" class="edit-confirm-pswd">
            <a href='javascript:;' class="edit-password-btn">Submit</a>
          </form>
        </div>
      </div>
    </div>
  </div>
  <footer class="contactfooter">
    <div class="skyline"><img src="assets/footer.png" width="100%" alt="Moober Solutions"></div>
    <ul class="footer__content">
      <li>
        <ul>
          <li class="footer__item footer__item--address">
