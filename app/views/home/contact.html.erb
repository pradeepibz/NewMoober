<%= render "shared/static_header" %>

<section class="slide">
  <div class="contact">
    <div class="row">
    	<div class="col-md-12">
    		<div class="contact-cover" style="width:100%;background-image:url(/assets/moober_background_image.jpg);"></div>
        <div class="contact-title">We want to hear from you</div>
    	</div>
    	<div class="col-md-12">
    		<div class="contact-description">
    			Have a question for us? Send us a message by filling out the form below and we'll get back to you within 24 hours.
    		</div>
    	</div>
  </div>
</section>
<section class="slide">
  <div class="mt-10">
    <div class="row">
    	<div class="col-md-6 col-md-offset-3">
    		<div class="contact-form text-center">
    			<h1>Send us a Message</h1>
    			<form class="form-group">
					  <input type="text" name="" placeholder="Full Name">
					  <input type="text" name="" placeholder="Email">
					  <input type="text" name="" placeholder="Mobile Number">
					  <input type="text" name="" placeholder="Message">
					  <input type="submit" name="Submit" >
					</form>
    		</div>
    	</div>
    </div>
  </div>
</section>
<section class="slide">
  <div class="mt-10">
    <div class="row">
      <%= render "shared/company_logos" %>
    </div>
  </div>
</section>

<section class="slide">
  <%= render 'shared/footer' %>
</section>